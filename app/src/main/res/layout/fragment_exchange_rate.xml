<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.exchangerate.ExchangeRateFragment">

    <TextView
        android:id="@+id/title_exchange_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_exchange_rate"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingTop="20dp"/>

    <ImageView
        android:id="@+id/img_exchange_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_currency_exchange_24"
        android:paddingBottom="20dp"/>

    <EditText
        android:id="@+id/txt_exchange_rate_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:padding="20dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:id="@+id/txt_exchange_rate_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="20dp" />

    <EditText
        android:id="@+id/txt_exchange_rate_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0"
        android:inputType="numberDecimal"
        android:padding="20dp" />

    <ImageButton
        android:id="@+id/btn_exchange_rate_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/btn_save"
        android:padding="20dp"
        android:src="@drawable/ic_baseline_save_24" />

    <TextView
        android:id="@+id/txt_last_modified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>